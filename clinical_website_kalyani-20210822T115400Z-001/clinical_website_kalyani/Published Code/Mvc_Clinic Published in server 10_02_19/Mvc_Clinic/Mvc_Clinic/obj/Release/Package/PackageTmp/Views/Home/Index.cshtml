<section id="testimonial" class="section-padding g-bg-position--center js__parallax-window" style="background: url('../../Content/MyTemplate/img/1920x1080/service_bg.jpg') 50% 0 no-repeat fixed;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="ser-title g-color--white g-font-weight--700">see what patients are saying</h2>
                <hr class="botm-line">
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-4" style="padding-bottom:20px;">
                    <div class="testi-details g-radius--50" style="font-family:'Brush Script MT';">
                        <!-- Paragraph -->
                        <p class="g-font-size-22--xs g-color--dark">&nbsp;&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.feedbackMessage)</p>
                    </div>
                    <div class="testi-info">
