@model IEnumerable<Mvc_Clinic.Models.FeedbackModel>
@{
    ViewBag.Title = "Mitali Memorial Poly Clinic";
    Layout = "~/Views/Shared/_myLayoutWelcome.cshtml";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryui")
@Styles.Render("~/Content/themes/base/css")



<script type="text/javascript">
    $(document).ready(function () {


        $("#btn_sendFeedback").click(function () {
           // alert("abc")
            var url = "/Home/sendfeedbackNew/"

            $.get(url, function (data) {
                $("#fd").html(data);
            })

        });
    });
</script>

<style>
    #map {
        height: 300px;
        width: 100%;
    }
</style>
<script>
    function initMap() {
        var mmpc = { lat: 22.968512, lng: 88.466004 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 19,
            center: { lat: 22.968440, lng: 88.465708 }
        });
        var marker = new google.maps.Marker({
            position: mmpc,
            map: map,
            icon: 'https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png'
        });
        var infoWindow = new google.maps.InfoWindow({
            content: '<h4><b>Mitali Memorial Poly Clinic</b></h4>'
        });
        marker.addListener('mouseover', function () {
            infoWindow.open(map,marker);
        });
        marker.addListener('click', function () {
            infoWindow.open(map, marker);
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_fjP6nlBMmw1J51jLmUKavbias5nGZqM&callback=initMap">
</script>

