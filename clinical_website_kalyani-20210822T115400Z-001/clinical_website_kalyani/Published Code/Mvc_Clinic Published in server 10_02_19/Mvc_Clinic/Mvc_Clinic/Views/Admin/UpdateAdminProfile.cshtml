@model Mvc_Clinic.Models.AdminModel

@{
    ViewBag.Title = "UpdateAdminProfile";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {

        var datetoday = new Date();
        $("#adminDoB").datepicker({
            dateFormat: "mm/dd/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-60:+0"
        });

    })
</script>



