@model Mvc_Clinic.Models.AdminModel

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}



<script type="text/javascript">
    $(document).ready(function () {

        var datetoday = new Date();
        $("#adminDoB").datepicker({
            dateFormat: "mm/dd/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-60:+0"
        });

    })
</script>








<div class="jumbotron" style="background-color:#f5fffa">


    @using (Html.BeginForm("AddAdmin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <center>
            <div style="height:25px;">

            </div>
            <fieldset>
                <div style="height:25px;">

                </div>
                <legend><h2><b>ENTER ADMIN DETAILS</b></h2></legend>

                <table style="width:60%">

                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.adminName)
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.adminName, new { @class = "form-control", placeholder = "*Admin Name" })

                            </div>
                        </td>
                        <td>
                            <b style="color:red;">@Html.ValidationMessageFor(model => model.adminName)</b>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.adminGender)
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                @*@Html.EditorFor(model => model.adminGender)*@
                                Male @Html.RadioButton("adminGender", "Male", false)
                                Female @Html.RadioButton("adminGender", "Female", false)

                            </div>
                        </td>
                        <td>
                            <b style="color:red;">@Html.ValidationMessageFor(model => model.adminGender)</b>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.adminDoB)
                            </div>
                        </td>
                        <td>
                            <div class="form-group" style="color:black;">
                                @*@Html.TextBoxFor(model => model.adminDoB, new { @readonly = "readonly", @id = "adminDoB" })*@
                                @*@Html.TextBoxFor(model => model.adminDoB, new { @class = "form-control ", placeholder = "dd/mm/yyyy", @type = "date" })*@
                                @*@Html.TextBox("adminDoB", "dd/mm/yyyy", new { @readonly = "readonly", @class = "form-control ", @style = "color:black" })*@
                                @Html.TextBox("adminDoB", "", new { @class = "form-control ", placeholder = "mm/dd/yyyy", @readonly="readonly" })
                            </div>
                        </td>
                        <td>
                            <b style="color:red;"> @Html.ValidationMessageFor(model => model.adminDoB)</b>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.adminEmailID)
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.adminEmailID, new { @class = "form-control", placeholder = "e.g. abc@gmail.com" })

                            </div>
                        </td>
                        <td>
                            <b style="color:red;"> @Html.ValidationMessageFor(model => model.adminEmailID)</b>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.imageAddress)
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input type="file" name="imageAddress" class="form-control" />

                            </div>
                        </td>
                        <td>
                            <b style="color:red;">@Html.ValidationMessageFor(model => model.imageAddress)</b>
                        </td>
                    </tr>
                    @if ((string)ViewBag.Error != "")
                    {
                        <tr> <td></td>  <td style="color:red"><b>@ViewBag.Error</b></td></tr>
                        <tr><td> <div style="height:10px"></div></td></tr>
                    }
                    <tr>
                        <td></td>
                        <td>
                            <p>
                                <input type="submit" class="btn btn-primary" value="Add Admin" />

                            </p>
                        </td>
                    </tr>
                   

                </table>
            </fieldset>
        </center>
    }
</div>
