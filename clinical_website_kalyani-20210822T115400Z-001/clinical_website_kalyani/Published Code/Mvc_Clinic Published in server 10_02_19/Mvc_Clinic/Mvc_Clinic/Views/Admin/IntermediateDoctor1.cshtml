@model Mvc_Clinic.Models.DoctorModel

@{
    ViewBag.Title = "IntermediateDoctor";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}

<div style="height:50px;">

</div>

<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-12 jumbotron">
                <div class="row DarkShadow" style="border:gray 1px solid;background-color:white;">
                    <div class="col-md-4 col-sm-6 col-xs-12" @*style="height:100px;width:150px;"*@>
                        @if (ViewBag.img == null) { ViewBag.img = ""; }
                        <img class="Pic img-thumbnail" src="@ViewBag.img" onerror="this.onerror = null; this.src = '/DoctorImages/doctor.jpg'  " />
                        @*<img src="@item.imageAddress" onerror="this.onerror = null; this.src = '/AdminImages/admin.jpg'  ">*@


                    </div>
                    <div class="col-md-8 col-sm-6 col-xs-12">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12 text-center" style="margin-left:20px">
                                <div class="row text-center" style="margin-top:25px;">
                                    <h4><b>@ViewBag.dName</b></h4>
                                </div>
                                <div class="row text-center">
                                    <h5 style="color: hsla(0,0%,67%,1.00)">@ViewBag.dDesignation</h5>
                                </div>
                                <div class="row text-center">
                                    <h6><b>Speciality:&nbsp&nbsp</b><i style="color: hsla(0,0%,67%,1.00)">@ViewBag.dSpeciality</i> </h6>
                                </div>
                                <div class="row text-center">
                                    <h6><b>Degree:&nbsp&nbsp</b><i style="color: hsla(0,0%,67%,1.00)">@ViewBag.degree</i> </h6>
                                </div>
                            </div>

                        </div>
                        <div class="col-sm-6 col-md-6 col-xs-12" style="margin-left: 20px;margin-top: 40px;margin-bottom: 10px; text-align:right;">

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid g-padding-y-115--lg g-padding-y-85--xs" style="background-color:whitesmoke">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 text-center">
            <div class="row DarkShadow" style="background-color:white">
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="g-padding-y-10--lg g-font-size-34--lg g-font-size-30--xs" style="color:darkkhaki;text-align:left">
                        <b><i>Doctor's Profile</i></b>
                    </div>
                    <div class="g-padding-y-20--lg g-padding-l-25-lg g-padding-r-25--lg g-padding-y-15--xs" style="width:250px;height:300px;">
                        <img class="img-thumbnail Pic" src="@ViewBag.img" onerror="this.onerror = null; this.src = '/DoctorImages/doctor.jpg'  " alt="">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-xs-12">
                            <table class="table table-stripped g-padding-l-30-lg" align="left" style="padding-left: 50px; text-align:left; width:70%; height:80%;">
                                <tr class="g-padding-y-30--lg">
                                    <td colspan="2">
                                        <b class="g-font-size-22--xs g-font-size-30--lg">
                                            <div class="display-label g-margin-b-10--lg" style="color:darkorange;padding-top:70px;">
                                                @ViewBag.dName
                                            </div>

                                        </b>
                                    </td>


                                </tr>

                                @{ string s = ViewBag.dDesignation;}
                                
                                @if ( @ViewBag.dDesignation != null )
                                {

                                    <tr>
                                        <td style="text-align:left">
                                            <b>
                                                <div class="display-label g-font-size-16--lg g-margin-b-10--lg" style="color:darkblue;">
                                                    Doctor Designation
                                                </div>
                                            </b>
                                        </td>
                                        <td>
                                            <div class="display-field g-font-size-14--lg">
                                                <b>@ViewBag.dDesignation</b>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td style="text-align:left">
                                        <b>
                                            <div class="display-label g-font-size-16--lg g-margin-b-10--lg" style="color:darkblue;">
                                                Doctor Speciality
                                            </div>
                                        </b>
                                    </td>
                                    <td>
                                        <div class="display-field g-font-size-14--lg">
                                            <b>@ViewBag.dSpeciality</b>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">
                                        <b>
                                            <div class="display-label g-font-size-16--lg g-margin-b-10--lg" style="color:darkblue;">
                                                Doctor Degree
                                            </div>
                                        </b>
                                    </td>
                                    <td>
                                        <div class="display-field g-font-size-14--lg">
                                            <b>@ViewBag.degree</b>
                                        </div>
                                    </td>
                                </tr>
                              
                                <tr>
                                    <td style="text-align:left">
                                        <b>
                                            <div class="display-label g-font-size-16--lg g-margin-b-10--lg" style="color:darkblue;">
                                                Doctor Working Schedule
                                            </div>
                                        </b>
                                    </td>
                                    <td>
                                        <div class="display-field g-font-size-14--lg">
                                            <b>@ViewBag.workingTime</b>
                                        </div>
                                    </td>
                                </tr>
                                
                               
                                <tr>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10" style="text-align:left; padding-left:50px; padding-bottom:40px;">
                        <i style="color:green;font-size:24px;">Note:</i> <div style="color:darkmagenta;font-size:16px;">Contact number for appoinment is: @ViewBag.numAppoin</div>
                        @if (@ViewBag.Lnum != null)
                        {
                            <div style="color:darkmagenta;font-size:16px;">Landline number for appoinment is: @ViewBag.Lnum</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div style="height:40px"></div>
<center>
    <a href="javascript:history.go(-1)" class="btn btn-primary">Edit</a>

    @if ((string)ViewBag.StatusDoc == "Add")
    {
        <a href="@Url.Action("FinalAddDocSubmission")" class="btn btn-success">Confirm Submission</a>
    }
    else
    {
        <a href="@Url.Action("FinalUpdateDocSubmission")" class="btn btn-success">Confirm Submission</a>

    }
</center>
<div style="height:40px"></div>

