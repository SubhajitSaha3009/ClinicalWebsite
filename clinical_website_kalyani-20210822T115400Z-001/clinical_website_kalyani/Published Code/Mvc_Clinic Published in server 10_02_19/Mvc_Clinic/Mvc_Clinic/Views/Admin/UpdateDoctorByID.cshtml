@model Mvc_Clinic.Models.DoctorIDModel

@{
    ViewBag.Title = "UpdateDoctorByID";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}


<div class="jumbotron" style="background-color:#f5fffa">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <center>
            <fieldset>
                <legend><h2><b>UPDATE DOCTOR BY ID</b></h2></legend>


                <table style="width:30%" align="center">
                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.doctorID, new { @style = "font-size:18px;" })
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.doctorID, new { @class="form-control" ,placeholder="*Doctor ID"})

                            </div>

                        </td>
                        <td style="color:red;">
                            @Html.ValidationMessageFor(model => model.doctorID)
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" class="btn btn-primary" value="Get Details" style="width:200px; height:50px;" />
                        </td>
                    </tr>


                </table>
            </fieldset>
        </center>
    }
</div>
