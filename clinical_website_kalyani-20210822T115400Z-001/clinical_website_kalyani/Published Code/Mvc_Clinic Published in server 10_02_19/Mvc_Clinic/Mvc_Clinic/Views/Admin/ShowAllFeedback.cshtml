@model IEnumerable<Mvc_Clinic.Models.FeedbackModel>

@{
    ViewBag.Title = "ShowFeedbacks";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}

<center>
    <div style="height:25px;"> </div>
    <i style="font-size:24px; color:green">@ViewBag.delmsg</i>
    <i style="font-size:24px; color:red">@ViewBag.delerrmsg</i>
    <div style="height:15px;"> </div>
</center>

<center>
    <h2>All Feedback</h2>
    <div style="height:25px;"></div>
    <div style="overflow-x:scroll;width:100%">
        <table class="table table-hover table-bordered " style="width:70%;">
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.feedbackID)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.contactNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.feedbackMessage)
                </th>
                <th>Action</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.feedbackID)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.contactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.feedbackMessage)
                    </td>

                    @if (item.feedbackStatus == "Invisible")
                    {
                        <td>
                            @Html.ActionLink("Make Visible", "VisibleFeedback", new { @Class = "btn btn-primary", id = item.feedbackID}, new {onclick = "return confirm('Are sure wants to make this Visible?');" })
                        </td>
                    }

                    @if (item.feedbackStatus == "Visible")
                    {
                        <td>
                            @Html.ActionLink("Make Invisible", "InvisibleFeedback", new { @Class = "btn btn-primary", id = item.feedbackID}, new {onclick = "return confirm('Are sure wants to make this Invisible?');" })
                        </td>
                    }
                    <td>
                        @Html.ActionLink("Delete", "DeleteFeedback", new { @Class = "btn btn-primary", id = item.feedbackID }, new { onclick = "return confirm('Are sure wants to delete?');" })
                    </td>
                </tr>
            }

        </table>
        </div>
</center>
<div style="height:70px;"></div>